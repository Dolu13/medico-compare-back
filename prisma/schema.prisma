generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model AutorisationType {
  autorisation_Id              Int              @id
  name            String
  SpecificMedicines SpecificMedicine[]
}

model GenericMedicine {
  Id                   Int          @id @default(autoincrement())
  CIS_code              Int          @unique   
  name            String
  specificMedicine    SpecificMedicine? @relation("SpecificMedicineGeneric", fields: [CIS_code], references: [CIS_code])
}

model AvisAsmr {
  Id                   Int          @id @default(autoincrement())
  CIS_code              Int          @unique   
  avis_asmr            String
  specificMedicine    SpecificMedicine? @relation("SpecificMedicineAvisAsmr", fields: [CIS_code], references: [CIS_code])
}

model AvisSmr {
  Id                   Int          @id @default(autoincrement())
  CIS_code              Int          @unique   
  avis_smr            String
  specificMedicine    SpecificMedicine? @relation("SpecificMedicineAvis", fields: [CIS_code], references: [CIS_code])
}


model SpecificMedicine {
  Id                   Int          @id @default(autoincrement())
  CIS_code                    Int               @map("CIS Code") @unique
  name                 String
  form                 String
  administration       String
  autorisationId       Int              
  autorisation         AutorisationType  @relation(fields: [autorisationId], references: [autorisation_Id])
  commercialized       Boolean
  AMM_date             String           @map("AMM_date")
  EU_number            String           @map("EU_number")
  company              String
  reinforced_surveillance Boolean         @map("reinforced_surveillance")
  avisSmr                  AvisSmr?        @relation("SpecificMedicineAvis")
  avisAsmr                  AvisAsmr?        @relation("SpecificMedicineAvisAsmr")
  genericMedicine                  GenericMedicine?        @relation("SpecificMedicineGeneric")

}

